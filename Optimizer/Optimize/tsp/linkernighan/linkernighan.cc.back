	}
      }

      if(dbl > 0 && idxpath >= 0)
      {
	
	tmpdist = 0;
	PathClass wes(&route[endnode], &route[0]);
	PathClass wys(&route[idxpath + 1], &route[0]);

	tmpdist = distRoute - dbl - wes.getval() + wys.getval();

	if(tmpdist < dist && fabs(tmpdist - dist) > 1.0e-10)
